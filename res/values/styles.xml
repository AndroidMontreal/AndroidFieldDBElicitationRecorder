<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <item name="android:typeface">sans</item>
        <item name="android:textSize">18sp</item>
    </style>
    
    <style name="EditPageTextView" parent="AppBaseTheme">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#DEDEDE</item>
    </style>
    
        <style name="SessionLabel" parent="AppBaseTheme">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textStyle">bold</item>
    </style>


    <style name="EditText" parent="AppBaseTheme">
        <item name="android:padding">8dp</item>
        <item name="android:layout_marginBottom">15dp</item>
        <item name="android:drawable">@drawable/custom_edit_text</item>
    </style>

    <style name="Button" parent="AppBaseTheme">
        <item name="android:padding">8dp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:drawable">@drawable/custom_edit_button</item>
    </style>

</resources>